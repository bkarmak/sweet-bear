<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content" >    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:paddingTop="13dp" >        <ImageView            android:id="@+id/ivBookCover"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <TextView            android:id="@+id/title"            style="@style/StoreLabel.Small"            android:layout_width="100dp"            android:layout_height="30dp"            android:layout_marginLeft="15dp"            android:layout_marginTop="105dp"            android:ellipsize="end"            android:gravity="center"            android:lines="2" />    </RelativeLayout>    <ImageView        android:id="@+id/ivUpdateLogo"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="right"        android:layout_marginLeft="97dp" /></FrameLayout>