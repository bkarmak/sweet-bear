<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329dp"
    android:layout_height="438dp"
    android:background="@drawable/login_info"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingRight="29dp"
    android:paddingTop="75dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etName"
            style="@style/Register"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@android:color/white"
            android:hint="@string/register_name"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="@color/register_gray" />

        <EditText
            android:id="@+id/etNickName"
            style="@style/Register"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:hint="@string/register_nickname"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="@color/register_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etEmail"
            style="@style/Register"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@android:color/white"
            android:hint="@string/register_email"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="@color/register_gray" />

        <EditText
            android:id="@+id/etTel"
            style="@style/Register"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:hint="@string/register_tel"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="@color/register_gray" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etCompany"
        style="@style/Register"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:hint="@string/register_company"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColorHint="@color/register_gray" />

    <EditText
        android:id="@+id/etMessage"
        style="@style/Register"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/white"
        android:cursorVisible="true"
        android:gravity="top"
        android:hint="@string/register_comment"
        android:paddingLeft="5dp"
        android:textColorHint="@color/register_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/btnBack"
            style="@style/LoginLabel.Small.Bold.Blue"
            android:background="@drawable/background_button_login"
            android:text="@string/back" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/LoginLabel.Small.Bold.Blue"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_button_login"
            android:text="@string/register" />
    </RelativeLayout>

</LinearLayout>